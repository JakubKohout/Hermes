{%  extends "base.html.twig" %}
{% block body %}

<!-- Main -->
<h2>Reporty</h2>

<h3>Seznam podřízených poboček podle počtu prodaných zájezdů za definovaný časový interval</h3>
<div class="well">
    <form action="" method="GET">
        <div class="input-append date" id="datetimepicker1">
            <input data-format="dd/MM/yyyy" type="text" value="{{ beginDate.format('d/m/Y') }}" name="beginDate">
           <span class="add-on">
        <button type="button" class="btn btn-default btn-lg btn-interval">
            Od
        </button>
        </span>
        </div>

        <div class="input-append date" id="datetimepicker2">
            <input data-format="dd/MM/yyyy" type="text" value="{{ endDate.format('d/m/Y') }}" name="endDate">
            <span class="add-on">
                <button type="button" class="btn btn-default btn-lg btn-interval">
                    Do
                </button>
        </span>
        </div>
        <button type="submit" class="btn btn-default btn-lg btn-interval">
            Nastavit interval
        </button>
    </form>
</div>

<script type="text/javascript">
    $(function() {
        $('#datetimepicker1').datetimepicker({
            pickTime: false
        });
    });
</script>

<script type="text/javascript">
    $(function() {
        $('#datetimepicker2').datetimepicker({
            pickTime: false
        });
    });
</script>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Pobočka</th>
        <th>Obrat</th>
        <th>Prodaných zájezdů</th>
    </tr>
    {% for branch in branches %}
    <tr>
        <td>{{ loop.index }}</td>
        <td>{{ branch.name }}</td>
        <td>{{ branch.totalPrice }} Kč</td>
        <td>{{ branch.totalCount }}</td>
    </tr>
    {% endfor %}
</table>
<button type="button" class="btn btn-default">Export</button>




{% endblock %}